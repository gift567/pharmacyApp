<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash"
    android:background="@color/white">


    <ImageView
        android:id="@+id/hey"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/lab">

    </ImageView>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text=" DK Online Pharmacy"
        android:textColor="@color/black"
        android:textSize="25sp">

    </TextView>


    <ProgressBar
        android:outlineSpotShadowColor="@color/navy"
        android:outlineAmbientShadowColor="@color/navy"
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hey"
        android:layout_centerHorizontal="true"

        >

    </ProgressBar>

    <TextView
android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="You order we deliver all medical products"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>


</RelativeLayout>